@{
}
<h3>Productos disponnibles</h3>
<a asp-controller="Carrito" asp-action="Index">Ver carrito</a>
<table class="table">
    <thead>
        <tr>
            <th sscope="col">ID</th>
            <th sscope="col">Nombre</th>
            <th sscope="col">Imagen</th>
            <th sscope="col">Precio</th>
            <th sscope="col">Acción</th>
        </tr>
    </thead>
    <tbody>
        @foreach(var prod in ViewBag.productos)
        {
            <tr>
                <td scope="row">@prod.id</td>
                <td>@prod.nombre</td>
                <td><img src="~/imagenes/@prod.imagen" width="100"/></td>
                <td>@prod.precio</td>
                <td><a asp-controller="Carrito" asp-action="Comprar" asp-route-id="@prod.id">Comprar ahora</a></td>
            </tr>
        }
    </tbody>
</table>